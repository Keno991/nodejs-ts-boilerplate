{
  "name": "nodejs-ts-boilerplate",
  "version": "0.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist && mkdir dist",
    "start": "node dist/server.js",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src --watch .env.development -L -e ts --exec yarn dev:start",
    "test": "jest --runInBand --no-cache",
    "test:coverage": "yarn test --coverage --detectOpenHandles",
    "lint": "eslint ./src ./__tests__ --ext .ts --fix",
    "tsc-dev": "tsc --project tsconfig.prod.json && tsc-alias -p tsconfig.json",
    "build": "npm-run-all clean lint tsc-dev",
    "prepare": "husky install",
    "tsc": "tsc"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
