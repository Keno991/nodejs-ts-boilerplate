    "express": "^4.18.1",
    "helmet": "^5.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.7",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1"
