{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "esnext.asynciterable", "dom"],
    "types": ["reflect-metadata", "jest"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "pretty": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "removeComments": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "useUnknownInCatchVariables": false,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noEmitOnError": true,
    "noErrorTruncation": true,
    "declarationDir": "dist/@types",
    "isolatedModules": false,
    "paths": {
      "@controller/*": ["src/controllers/*"],
      "@service/*": ["src/services/*"],
      "@exceptions": ["src/utils/exceptions/index"],
      "@repository/*": ["src/repositories/*"],
      "@dto/*": ["src/types/dtos/*"],
      "@enums/*": ["src/types/enums/*"],
      "@interfaces/*": ["src/types/interfaces/*"],
      "@entity/*": ["src/database/entities/*"],
      "@middleware/*": ["src/middleware/*"],
      "@lib/*": ["src/lib/*"],
      "@routes": ["src/routes/index"],
      "@utils/*": ["src/utils/*"],
      "@env": ["src/utils/env.util"]
    }
  },
  "include": ["src/**/*", "__tests__", "jest.config.ts"],
  "exclude": ["node_modules", "lint-staged.config.js"]
}
